<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main1"
    android:background="@color/purple_back_light"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:fitsSystemWindows="true"
    tools:context=".DetailsActivity">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:background="@color/purple_back_light"
    android:orientation="vertical"
    tools:context=".DetailsActivity">
    <ImageView
        android:id="@+id/imageDetails"
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"


        app:srcCompat="@drawable/ic_launcher_background" />
    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/titreDetail"
        android:fontFamily="cursive"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:textSize="38sp"
        android:text="TextView" />

    <RatingBar
        android:id="@+id/ratingBarDetails"
        android:progressTint="@color/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center"
        android:stepSize="0.1" />



    <TextView
        android:id="@+id/textViewGenre"
        android:textColor="@color/titreDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:layout_marginBottom="10dp"
        android:textSize="25sp"
        android:text="Genre" />
    <TextView
        android:id="@+id/genre"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="TextView" />
    <TextView
        android:textColor="@color/titreDetail"
        android:id="@+id/textViewDirector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:layout_marginBottom="10dp"
        android:textSize="25sp"
        android:text="Director" />
    <TextView
        android:id="@+id/director"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="TextView" />
    <TextView
        android:textColor="@color/titreDetail"
        android:id="@+id/textViewActor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:layout_marginBottom="10dp"
        android:textSize="25sp"
        android:text="Main Actor" />
    <TextView
        android:id="@+id/actor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="TextView" />

    <TextView
        android:textColor="@color/titreDetail"
        android:id="@+id/textViewDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:layout_marginBottom="10dp"
        android:textSize="25sp"
        android:text="Description" />
    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:justificationMode="inter_word"
         />


</LinearLayout>
    </ScrollView>